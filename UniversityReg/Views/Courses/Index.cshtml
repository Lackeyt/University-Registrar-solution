@{
  Layout = "_Layout";
}

@using UniversityReg.Models;
@model List<UniversityReg.Models.Course>;

<h1>Courses</h1>

@if (@Model.Count == 0)
{
  <h3>No courses have been added yet!</h3>
} 

@foreach (Course course in Model)
{
  <li>@Html.ActionLink($"{course.Name}", "Details", new { id = course.CourseId }) || @course.Number</li>
}
<input type="button" value="Add new course" onclick="location.href='@Url.Action("Create", "Courses")';" class="btn btn-primary" />
<input type="button" value="Return Home" onclick="location.href='@Url.Action("Index", "Home")';" class="btn btn-primary" />