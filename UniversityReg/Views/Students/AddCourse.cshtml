@{
  Layout = "_Layout";
}

@model UniversityReg.Models.Student

<h2>Add a Course</h2>

<h4>Add a course to this student: @Html.DisplayFor(model => model.Name)</h4>

@using (Html.BeginForm())
{
    @Html.HiddenFor(model => model.StudentId)

    @Html.Label("Select course")
    @Html.DropDownList("CourseId")

    <input type="submit" value="Save" />
}
<input type="button" value="Student List" onclick="location.href='@Url.Action("Index", "Students")';" class="btn btn-primary" />
<input type="button" value="Return Home" onclick="location.href='@Url.Action("Index", "Home")';" class="btn btn-primary" />