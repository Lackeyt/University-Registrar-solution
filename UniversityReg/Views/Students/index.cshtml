@{
  Layout = "_Layout";
}

@using UniversityReg.Models;
@model List<UniversityReg.Models.Student>;

<h1>Students</h1>

@if (@Model.Count == 0)
{
  <h3>No students have been added yet!</h3>
} 

@foreach (Student student in Model)
{
  <li>@Html.ActionLink($"{student.Name}", "Details", new { id = student.StudentId })</li>
}
<input type="button" value="Add Student" onclick="location.href='@Url.Action("Create", "Students")';" class="btn btn-primary" />
<input type="button" value="Return Home" onclick="location.href='@Url.Action("Index", "Home")';" class="btn btn-primary" />